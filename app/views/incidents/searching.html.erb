<div class="main-container">
  <div id="inner-buttonpage-container">
    <div>
      <%= simple_form_for Incident.new, url: "/", method: :post do |f| %>
        <%= f.input :incident_type, as: :hidden, input_html: { value: "red" } %>
        <button type="submit" id="red-button"><span class="fa-solid fa-bolt"></span></button>
      <% end %>
    </div>
    <div>
      <%= simple_form_for Incident.new, url: "/", method: :post do |f| %>
        <%= f.input :incident_type, as: :hidden, input_html: { value: "yellow" } %>
        <button type="submit" id="yellow-button"><span class="fa-solid fa-bolt"></span></button>
      <% end %>
    </div>
  </div>
</div>

<style>
  .not-hidden-popup {
    /* display: none; */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 9999;
    color: white;
    text-align: center;
    padding-top: 48%;
    font-size: 24px;
  }

  .hidden-popup button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #f44336;
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-right: 10px;
    font-size: 16px;
  }
</style>

<div id="popup-waiting" class="not-hidden-popup main-container">
  <div>
    <img src="<%= asset_path('scan-1912.gif') %>" alt="Radar Scan GIF" class="radar">
    <p>We are looking for someone around you!</p>
  </div>
</div>

<script>
  setTimeout(function() {
    window.location.href = "<%= incident_page_path(@incident) %>";
  }, 10000000);
</script>
