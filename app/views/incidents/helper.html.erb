<!--
<h1>This is the helper page</h1>
<p><%= @incident.user.first_name %> (<%= @incident.user %>) is the affected user</p>
-->
<div class="main-container">
  <h2> About <%= @incident.user.first_name %> </h2>
  <div class="img-container">
    <% image_source = User.list.include?(@incident.user.first_name) ? "#{@incident.user.first_name}_avatar.jpeg" : "test_avatar.webp" %>
    <img src="<%= image_path(image_source) %>" style="width: 100%" alt="">
  </div>
  <div id="helper-container">
    <h3> Medical Information </h3>
    <div id="helper-subcontainer">
      <p> Medications: <span class="med-value"> <%= @incident.user.medication %> </span> </p>
      <p> Height (cm): <span class="med-value"> <%= @incident.user.height %> </span> </p>
      <p> Language: <span class="med-value"> <%= @incident.user.languages %> </span> </p>
      <p> Medical condition: <span class="med-value"> <%= @incident.user.medical_info.title %> </span> </p>
    </div>
  </div>
  <div id="emergency-container">
    <h3>Emergency numbers</h3>
    <div id="emergency-subcontainer">
      <a href="tel:112"><p>International emergencies: <span class="number-value">112 ☎</span></p></a>
      <a href="tel:144"><p>Ambulance: <span class="number-value">144 ☎</span></p></a>
      <a href="tel:117"><p>Police: <span class="number-value">117 ☎</span></p></a>
      <a href="tel:118"><p>Fire: <span class="number-value">118 ☎</span></p></a>
      <a href="tel:145"><p>Tox-center: <span class="number-value">145 ☎</span></p></a>
    </div>
  </div>
  <div class="helper-subcontainer">
    <h3>The 3 C's</h3>
    <p>Check, Call, Care </p>
    <h3>The 3 P's</h3>
    <p>Preserve life, Prevent Deterioration, Promote Recovery</p>
    <h3>Useful First Aid information</h3>
    <a href="https://www.globalfirstaidcentre.org/first-aid/" class="external-links" target="_blank" >→ First Aid Instructions</a>
  </div>
  <div class="button-container" id="helper-button-container">
    <%= link_to "Close the case", close_path(@incident), class: "button" %>
  </div>
</div>
